{% extends 'base.html.twig' %}
{% block body %}
    <h1>Inscription</h1>
    {{ form_start(form) }}
    <div class="col-md-6 mx-auto">

        <div class="form-group", style="margin: 20px">
            {{ form_row(form.surname, {'label': "Nom",'attr': {'placeholder' : 'Nom...'}}) }}
        </div>

        <div class="form-group", style="margin: 20px">
            {{ form_row(form.forename, {'label': "Prénom",'attr': {'placeholder' : 'Prénom...'}}) }}
        </div>

        <div class="form-group", style="margin: 20px">
            {{ form_row(form.email, {'label': "Email",'attr': {'placeholder' : 'Email...'}}) }}
        </div>

        <div class="form-group", style="margin: 20px">
            {{ form_row(form.password, {'label': "Mot de passe",'attr': {'placeholder' : 'Mot de passe...'}})  }}
            <small class="form-text text-muted">
                Attention : Votre mot de passe doit contenir au moins 8 caractères
            </small>
        </div>

        <div class="form-group", style="margin: 20px">
            {{ form_row(form.confirm_password, {'label': "Confirmer le mot de passe",'attr': {'placeholder' : 'Confirmer le mot de passe...'}})  }}
        </div>

        <div class="form-group", style="margin-top: 20px; margin-left: 20px; margin-right: 20px">
            {{ form_row(form.add1, {'label': "Adresse",'attr': {'placeholder' : 'Ligne 1...'}}) }}
        </div>
        <div class="form-group", style="margin-left: 20px; margin-right: 20px">
            {{ form_row(form.add2, {'label': false,'attr': {'placeholder' : 'Ligne 2... (facultatif)'}}) }}
        </div>

        <div class="form-group", style="margin: 20px">
            {{ form_row(form.postcode, {'label': "Code postal",'attr': {'placeholder' : 'Code postal...'}}) }}
        </div>

        <div class="form-group", style="margin: 20px">
            {{ form_row(form.city, {'label': "Ville",'attr': {'placeholder' : 'Ville...'}}) }}
        </div>

        <div class="form-group", style="margin: 20px">
            {{ form_row(form.phone, {'label': "Téléphone",'attr': {'placeholder' : 'N° de téléphone...'}}) }}
        </div>

        <button type="submit" class="btn" style="margin-left: 20px">Inscription</button>
        ou
        <a href="{{ path('security_login') }}" style="color: black;" role="button">
            <u>se connecter</u>
        </a>
        si vous avez déjà un compte.
    </div>
    <br>
    {{ form_end(form) }}
{% endblock %}